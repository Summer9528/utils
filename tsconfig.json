{
  "include": [
    "rollup.config.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "scripts/**/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strictNullChecks": true
  }
}