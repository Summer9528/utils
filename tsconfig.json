{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "scripts/**/*",
    "test/**/*",
    "rollup.config.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strictNullChecks": true
  }
}